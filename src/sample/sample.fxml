<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <Pane prefHeight="250.0" prefWidth="550.0">
            <children>
                <ComboBox fx:id="comboCountry" layoutX="35.0" layoutY="75.0" onShowing="#clickComboCountry" prefWidth="150.0" />
                <Label fx:id="lblCountry" layoutX="35.0" layoutY="58.0" prefHeight="17.0" prefWidth="93.0" text="Select Country:" />
                <ComboBox fx:id="comboCity" layoutX="35.0" layoutY="132.0" onShowing="#clickComboCity" prefWidth="150.0" />
                <Label fx:id="lblCity" layoutX="35.0" layoutY="115.0" text="Select City:" />
                <Label fx:id="lblPop" layoutX="373.0" layoutY="79.0" text="Population: " />
                <Button fx:id="btnShow" layoutX="224.0" layoutY="157.0" mnemonicParsing="false" onAction="#clickBtnShow" text="Show" />
                <Label fx:id="lblTemp" layoutX="370.0" layoutY="100.0" text="Temperature:" />
                <Label fx:id="lblHum" layoutX="370.0" layoutY="121.0" text="Humidity:" />
                <Label fx:id="lblDis" layoutX="370.0" layoutY="143.0" text="Distance:" />
                <Label fx:id="lblRise" layoutX="35.0" layoutY="182.0" opacity="0.0" text="Sunrise:" />
                <Label fx:id="lblSet" layoutX="35.0" layoutY="202.0" opacity="0.0" text="Sunset:" />
                <Label fx:id="lblVis" layoutX="35.0" layoutY="222.0" opacity="0.0" text="Visibility:" />
                <Label layoutX="35.0" layoutY="242.0" opacity="0.0" text="Sunrise:" />
            <CheckBox fx:id="checkDetails" layoutX="224.0" layoutY="194.0" mnemonicParsing="false" onAction="#clickCheckDetails" text="Details" />
            <Button fx:id="btnOpenWeb" layoutX="226.0" layoutY="117.0" mnemonicParsing="false" onAction="#clickBtnOpenWeb" text="WEB" />
            </children>
        </Pane>
    </children>
</GridPane>
